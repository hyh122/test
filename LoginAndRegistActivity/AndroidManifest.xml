<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demoone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:name="app.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="ui.caseStudy.LoginAndRegistActivity"
            android:label="@string/app_name" >

            <!-- 设置主Activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ui.caseStudy.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="ui.caseStudy.EditActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- 每填加一个Activity 都需要在此进行注册 -->

        <activity
            android:name="ui.caseStudy.ViewPagerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="ui.caseStudy.TestTwoActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="ui.caseStudy.TestThreeActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>